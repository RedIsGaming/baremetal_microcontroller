    "version": "0.2.0",
    "configurations": [
        {
            /* Configuration for the STM32F411 Discovery board */
            "name": "Debug (OpenOCD)",
            "cwd": "${workspaceRoot}",
            "executable": "./target/thumbv7em-none-eabihf/debug/baremetal_microcontroller",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "preLaunchTask": "Cargo Build (debug)",
            "device": "STM32F411VET6",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "${workspaceRoot}/STM32F411.svd",
            "postLaunchCommands": [
                "monitor arm semihosting enable"
            ],
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 8000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    { "type": "console", "label": "Hello", "port": 0 }
                ]
            }
        }
    ]
}
